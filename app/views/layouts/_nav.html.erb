<div class="nav-wrapper level-right level-item">
  <% if current_user %>
    <div class="level-item nav-item">
    	<img class="thumb" src="<%= current_user.img_url %>"></img>
    </div> 
	<div class="level-item nav-item">
		<strong><%= current_user.name %></strong>
	</div>
    <div class="level-item nav-item">
		<%= link_to "Sign out", signout_path, id: "sign_out" %>
	</div>
    
  <% else %>
  	<div class="level-item nav-item">
  		<%= image_tag "googleIcon.png", class: "thumb" %>
    	<!-- <img class="thumb" src="googleIcon.png"></img>
 -->    </div> 
    <div class="level-item nav-item">
    	<%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
    </div>
  <% end %>
</div>